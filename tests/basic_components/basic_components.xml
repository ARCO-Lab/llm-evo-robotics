<mujoco model="test">
    <worldbody>
        <light name="main_light" pos="0 0 2" dir="0 0 -1" diffuse="1 1 1"/>
        <geom name="ground" type="plane" size="10 10 0.1" rgba="1 1 1 1"/>
        <body name="square">
            <geom name="square" type="box" size="0.1 0.1 0.1" rgba="0 1 1 1"/>
        </body>

        <!-- 长方形（box） -->
        <body name="rectangle">
            <geom name="rectangle" type="box" size="0.2 0.1 0.05" pos="1 1 0.05" rgba="0 1 0 1"/>
        </body>

        <!-- 圆形（cylinder） -->
        <body name="circle">
            <geom name="circle" type="cylinder" size="0.1 0.02" pos="0 1 0.02" rgba="0 0 1 1"/>
        </body>

        <!-- 球体（sphere） -->
        <body name="sphere">
            <geom name="sphere" type="sphere" size="0.1" pos="-1 -1 0.1" rgba="1 1 0 1"/>
        </body>

        <!-- 圆柱（cylinder） -->
        <body name="cylinder">
            <geom name="cylinder" type="cylinder" size="0.1 0.2" pos="1 -1 0.2" rgba="1 0 1 1"/>
        </body>

        <!-- 圆锥（ellipsoid 近似） -->
        <body name="cone">
            <geom name="cone" type="ellipsoid" size="0.1 0.1 0.2" pos="0 -1 0.2" rgba="0 1 1 1"/>
        </body>

        <!-- 三角形 & 五边形（需要使用 mesh） -->
        <body name="triangle">
            <geom name="triangle" type="mesh" mesh="triangle_mesh" pos="-2 0 0.05" rgba="1 0.5 0 1"/>
        </body>

        <body name="pentagon">
            <geom name="pentagon" type="mesh" mesh="pentagon_mesh" pos="2 0 0.05" rgba="0.5 0 1 1"/>
        </body>
    </worldbody>

    <asset>
        <!-- 加载外部 Mesh 文件 -->
        <mesh name="triangle_mesh" file="triangle.obj" />
        <mesh name="pentagon_mesh" file="pentagon.obj" />
    </asset>
</mujoco>
